---
import SectionWrapper from '../layouts/section-wrapper.astro';
---

<SectionWrapper
  title='Color Mix'
  id='color-mix'
  code={`
button:hover {
  background-color: color-mix(in srgb, var(--c-secondary), white 20%);
}
`}>
  <button>Hover me 🙋🏻‍♂️</button>
</SectionWrapper>

<style>
  button {
    border: none;
    padding: var(--s-xl);
    border-radius: var(--br-lg);
    font-size: 4rem;
    background-color: var(--c-secondary);
    color: var(--c-text);
    cursor: pointer;

    &:hover {
      background-color: color-mix(in srgb, var(--c-secondary), white 20%);
    }
    &:active {
      background-color: color-mix(in srgb, var(--c-secondary), black 10%);
    }
  }
</style>
